using System;
using System.Linq;
 
public class Solution
{
    public int[,] solution(int n)
    {
        int count = 0;
        int[,] r = new int[n, n];
        
        for(int i = 0; i < n; i++)
        {
            r[i, count] = 1;
            count++;
        }
        
        return r;
    }
}
